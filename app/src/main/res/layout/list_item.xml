<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/word_image"
        android:layout_width="@dimen/list_item_height"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/tan_background"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_toRightOf="@+id/word_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="vertical"
        android:id="@+id/text_container">

        <TextView
            android:id="@+id/miwok_word"
            style="@style/PlacesStyle"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:textStyle="bold"
            tools:background="@color/primary_dark_color"
            tools:text="DescriptionBrief" />

        <TextView
            android:id="@+id/default_word"
            style="@style/PlacesStyle"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            tools:background="@color/primary_dark_color"
            tools:text="Rating" />
        <TextView
            android:id="@+id/default_word"
            style="@style/PlacesStyle"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            tools:background="@color/primary_dark_color"
            tools:text="Location" />
    </LinearLayout>

</RelativeLayout>