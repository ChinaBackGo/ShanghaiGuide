<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.example.shanghaiguide.MainActivity">

    <!-- Places to Eat -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_see">

        <TextView
            android:id="@+id/places_to_see"
            style="@style/CategoryStyle"
            android:text="Places to See" />
    </FrameLayout>

    <!-- Places to Eat -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_eat">

        <TextView
            android:id="@+id/places_to_eat"
            style="@style/CategoryStyle"
            android:text="Places to Eat" />
    </FrameLayout>

</LinearLayout>
